<main>
    <div class="container">
    <div class="card">
        <form action="/signup" method="post">
      <div class="form-group">
        <label for="firstname">Nombre:</label>
        <input type="text" id="firstname" name="firstName" onkeypress="return soloLetras(event)">
      </div>

      <div class="form-group">
        <label for="lastname">Apellidos:</label>
        <input type="text" id="lastname" name="lastName" onkeypress="return soloLetras(event)">
      </div>

      <div class="form-group">
        <label for="birthdate">Fecha de Nacimiento:</label>
        <input type="date" id="birthdate" name="dateOfBirth">
      </div>

      <div class="form-group">
        <label for="email">Correo Electrónico:</label>
        <input type="email" id="email" name="email" placeholder="usuario@gmail.com">
      </div>

      <div class="form-group">
        <label for="phone">Teléfono:</label>
        <input type="tel" id="phone" name="phone" placeholder="(809)-456-7890">
      </div>

      <div class="form-group">
        <label for="gender">Género:</label>
        <select id="gender" name="gender">
          <option value="0">Hombre</option>
          <option value="1">Mujer</option>
        </select>
      </div>

      <div class="form-group">
        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password">
      </div>

      <div class="form-group">
        <label for="confirm-password">Confirmar Contraseña:</label>
        <input type="password" id="confirm-password" name="confirmPassword">
      </div>

      <div class="btn-container">
        <button class="btn btn-cancel" onclick="cancel()">Cancelar</button>
        <button type="submit" class="btn btn-register" onclick="register()">Registrar</button>
      </div>
</form>
      <!-- Mensajes de Error y Éxito -->
      <div id="error-message" class="error"></div>
      <div id="success-message" class="success"></div>

      <p>¿Ya tienes una cuenta? <a href="/Login">Inicia sesión</a></p>
    
    </div>
  </div>
</main>