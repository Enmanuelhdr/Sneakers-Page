<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{pageTitle}}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/Css/Bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    {{#if siteActive}}
    <link rel="stylesheet" href="/Css/Styles/style_site.css">
    <link rel="stylesheet" href="/Css/Styles/style_Sneaker.css">
    {{/if}}
    {{#if signUpActive}}
    <link rel="stylesheet" href="/Css/Styles/style_SignUp.css">
    {{/if}}
    {{#if loginActive}}
    <link rel="stylesheet" href="/Css/Styles/style_Login.css">
    {{/if}}
    {{#if AboutUsActive}}
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/heroicons@1.0.4/css/heroicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/Css/Styles/style_aboutUs.css">
    {{/if}}
    {{#if sneakersPage}}
    <link rel="stylesheet" href="/Css/Styles/style_Sneaker.css">
    {{/if}}
    {{#if sneakerCrud}}
    <link rel="stylesheet" href="/Css/Styles/style_SneakerCrud.css">
    {{/if}}
    {{#if filter}}
    <link rel="stylesheet" href="/Css/Styles/style_Filter.css">
    {{/if}}
    {{#if sneakerInfo}}
    <link rel="stylesheet" href="/Css/Styles/style_sneakerview.css">
    {{/if}}
    {{#if tetsuo}}
    <link rel="stylesheet" href="/Css/Styles/style_tetsuo.css">
    {{/if}}
    {{#if ConsultaPregunta}}
    <link rel="stylesheet" href="/Css/Styles/style_consultasPreguntas.css">
    {{/if}}
    {{#if cartActive}}
    <link rel="stylesheet" href="/Css/Styles/style_cart.css">
    {{/if}}
    
</head>

<body>
    {{#if headerBar}}
    {{> header}}
    {{/if}}
{{#if hasWarningMessages}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <ul>
            {{#each warningMessages}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    {{#if hasSuccessMessages}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <ul>
            {{#each successMessages}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    {{#if hasErrorMessages}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <ul>
            {{#each errorMessages}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    {{{body}}}

    {{#if headerBar}}
    {{> footer}}
    {{/if}}

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="/Js/Bootstrap/js/bootstrap.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    {{!-- <script src="/Js/scripts/tarjetas.js"></script> --}}

    {{#if signUpActive}}
    <script src="/Js/scripts/script_signUp.js"></script>
    {{/if}}
    {{#if loginActive}}
    <script src="/Js/scripts/script_Login.js"></script>
    {{/if}}
    {{#if sneakerInfo}}
    <script src="/Js/scripts/script_sneakerInfo.js"></script>
    {{/if}}
    {{#if cartActive}}
    <script src="/Js/scripts/script_cart.js"></script>
    {{/if}}

</body>

</html>